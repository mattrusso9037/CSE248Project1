package Controller;

public class Slot {

	    private final int id;
	    private final int size;
	    private boolean isAvailable;
	    private Vehicle vehicle;

	    public Slot(int id, int size) {
	        this.id = id;
	        this.size = size;
	        this.isAvailable = true;
	    }

	    public void occupy(Vehicle v) {
	        this.vehicle = v;
	        this.isAvailable = false;
	    }

	    public void release() {
	        this.vehicle = null;
	        this.isAvailable = true;
	    }
	}

