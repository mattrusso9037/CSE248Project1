package Controller;

import java.util.HashMap;
import java.util.LinkedList;
import java.util.List;

import com.sun.javafx.collections.MappingChange.Map;

public class Lot {
	private static Lot lot = null;
	private static final int NUMBER_OF_SMALL_SLOTS = 25;
	private static final int NUMBER_OF_MEDIUM_SLOTS = 25;
	private static final int NUMBER_OF_LARGE_SLOTS = 25;

	public Map<Integer, Slot> occupiedSlots;
	private List<Slot> smallSlots;
	private List<Slot> mediumSlots;
	private List<Slot> largeSlots;

	private Lot() {
		smallSlots = new LinkedList<>();
		mediumSlots = new LinkedList<>();
		largeSlots = new LinkedList<>();

		occupiedSlots = (Map<Integer, Slot>) new HashMap();

		for (int i = 1; i <= NUMBER_OF_SMALL_SLOTS; i++)
			smallSlots.add(new Slot(i, 1));

		for (int i = 1; i <= NUMBER_OF_MEDIUM_SLOTS; i++)
			mediumSlots.add(new Slot(i, 2));

		for (int i = 1; i <= NUMBER_OF_LARGE_SLOTS; i++)
			largeSlots.add(new Slot(i, 3));
	}

	public List<Slot> getSmallSlots() {
		return smallSlots;
	}

	public List<Slot> getMediumSlots() {
		return mediumSlots;
	}

	public List<Slot> getLargeSlots() {
		return largeSlots;
	}

	public static Lot getInstance() {
		if (lot == null)
			lot = new Lot();
		return lot;

	}
}
